<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/find_light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="findLight"
        android:text="Find Light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggle_light_button" />

    <Button
        android:id="@+id/toggle_light_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:enabled="false"
        android:text="LIGHT"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/find_light_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>